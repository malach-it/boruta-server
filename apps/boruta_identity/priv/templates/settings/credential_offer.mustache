<h1>Credential offer</h1>

{{^valid?}}
<div class="ui error message">
{{#errors}}
  <li>{{ message }}</li>
{{/errors}}
</div>
{{/valid?}}

<h2>Scan the QR code with your identity wallet</h2>
<hr />
<div class="ui center aligned qr-code segment">
  <img width="350" src="data:image/svg+xml; base64, {{ base64_credential_offer_qr_code }}" alt="QR code" />
</div>
<div class="ui center aligned deeplink segment">
  <a class="ui blue fluid button" href="{{ credential_offer_deeplink }}">Get your verifiable credential</a>
</div>

<style>
.deeplink {
  display: none;
}
@media (max-width: 768px) {
  .qr-code {
    display: none;
  }
  .deeplink {
    display: block;
  }
}
</style>

